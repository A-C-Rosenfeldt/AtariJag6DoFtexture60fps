{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Launch app.js",
            "program": "${workspaceFolder}/app.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Mocha Tests",
            "args": [
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/test/*.js",              
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "name": "TS Test",
            "args": [
              "--reporter",
              "spec",
              "${file}"
            ],
        },
        
        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "msedge",
            "url": "http://localhost:3000/index.htm",
            "webRoot": "${workspaceFolder}/public"
        },        {
            "name": "Launch Edge linePartitions",
            "request": "launch",
            "type": "msedge",
            "url": "http://localhost:3000/lines_partition.htm",
            "webRoot": "${workspaceFolder}/public"
        },
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:3000/index.htm",
            "webRoot": "${workspaceFolder}"
        },        
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program generic",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "name": "Launch via NPM",
            "request": "launch",
            "runtimeArgs": [
                "test",
                "inspect",
                "scripts-prepend-node-path"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        }
    ]
}